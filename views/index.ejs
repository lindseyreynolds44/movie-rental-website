      </div>


    <main>
      <hr />
      <div id="selected-movie-container">
        <!-- Display movie poster -->
        <div id="selected-image"></div>
        <div id="movie-detail">
          <p id="title"><span id="title-content"></span></p>
          <p id="synopsis">Synopsis: <span id="synopsis-content"></span></p>
          <p id="rating">TMDB Rating: <span id="rating-content"></span></p>
          <p id="genre">Genre: <span id="genre-content"></span></p>
          <p id="release">Release Date: <span id="release-content"></span></p>
          <p id="price">Price: <span id="price-content"></span></p>
          <button id="add-movie" class="btn btn-danger">
            Add to Cart
          </button>
        </div>
      </div>
      <div id="featured-header"></div>
      <div id="resultsContainer"></div>
    </main>
