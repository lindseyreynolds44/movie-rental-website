<%- include("partials/header.ejs") %>
<%- include("partials/nav.ejs") %>


  <body page="index">
    <!-- Filter bar -->
    <div id="filters-container">
      <div id="genre-box">
        <!-- Filter by Genre: -->
        <a id="selected-genre" class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Genre
        </a>
        <div id="filter-genre" class="dropdown-menu" aria-labelledby="dropdownMenuLink" filter="genre"></div>  
      </div>

      <div id="rating-box">
        <!-- Filter by Rating: -->
        <a id="selected-rating" class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select Rating
        </a>
        <div id="filter-rating" class="dropdown-menu" aria-labelledby="dropdownMenuLink" filter="rating">
          <a class="dropdown-item" href="#">Above 3</a>
          <a class="dropdown-item" href="#">Above 5</a>
          <a class="dropdown-item" href="#">Above 7</a>
        </div>
      </div>
      <button id="reset-filters" class="btn btn-outline-warning" type="submit">Reset Filters</button>
    </div>
    <br><br>
    <h2 class="text-center"> Top Rated Movies </h2>
    <br><br>
    

    <div class="container">
      <div class="w-75 h-75">
        <div class="carousel slide" id="carouselExample" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
            <% for(let i = 1; i< resultArray.length; i++) { %>
              <li data-target="#carouselExample" data-slide-to="<%= i %>"></li>
            <% } %>
          </ol>

          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="<%= resultArray[0].imageUrl %>" alt="image" class="d-block w-100 h-100">
            </div>
            <% for(let i = 1; i< resultArray.length; i++) { %>
            <div class="carousel-item">
              <img src="<%= resultArray[i].imageUrl %>" alt="image" class="d-block w-100 h-100">
            </div>
            <% } %>
          </div>
          <a href="#carouselExample" class="carousel-control-prev" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a href="#carouselExample" class="carousel-control-next" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>


        </div>
      </div>
    </div>

    <br>
    <button id="add-movie" class="btn btn-danger">
      Add to Cart
    </button>
    <%- include("partials/bootstrap-footer.ejs") %> 
  </body>
</html>